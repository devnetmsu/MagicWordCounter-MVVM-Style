@model MagicWordCounter.Core.WordCountingViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Magic Word Counter</h2>
<i>The Magic Website</i>
<hr />
@using (Html.BeginForm("Index", "Counting", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                Text to count:<br />
                @Html.TextAreaFor(x => x.TextToCount, new { style = "width: 100%; height: 350px;" })
                <br />
                <br />
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(x => x.ExcludeArticles)
                        Exclude articles
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(x => x.CountQuotesAsOneWord)
                        Count quotes as one word
                    </label>
                </div>
            </div>
        </div>        
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <input type="submit" value="Count" class="btn btn-default" />
            </div>
        </div>        
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <b>@Html.DisplayFor(x => x.WordCountDisplay)</b>
            </div>
        </div>        
    </div>

}
